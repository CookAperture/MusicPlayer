<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTesty.MainWindow"
        Title="MusicPlayer"
        TransparencyLevelHint="AcrylicBlur"
        HasSystemDecorations="False"
        Name="Window">
        <!-- WindowState="{Binding WindowState, Mode=TwoWay}" -->
        <!-- ExtendClientAreaTitleBarHeightHint="{Binding TitleBarHeight}" -->
        <!-- ExtendClientAreaChromeHints="{Binding ChromeHints}" -->
        <!-- ExtendClientAreaToDecorationsHint="{Binding ExtendClientAreaEnabled}" -->
  
  <Panel>
     <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial 
          BackgroundSource="Digger"
          TintColor="Black"
          TintOpacity="1"
          MaterialOpacity="0.65"/>
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>
  <!--- This is the CustomTitleBar -->
  <Grid RowDefinitions="5,*,5" ColumnDefinitions="5,*,5">
    <DockPanel  Grid.Column="1"  Grid.Row="1" >
      <Grid Name="TitleBar" DockPanel.Dock="Top" ColumnDefinitions="Auto,*,Auto"> <!-- Check in Here -> Themes reduce availability of move area -->
        <TextBlock VerticalAlignment="Center" Margin="5,0,0,0">Title</TextBlock>
        <StackPanel Grid.Column="2" Orientation="Horizontal">
          <Button Name="MinimizeButton">_</Button>
          <Button Name="MaximizeButton">[ ]</Button>
          <Button Name="CloseButton">X</Button>
        </StackPanel>
      </Grid>
      <!--- This is the actual Content -->
      <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
        <RelativePanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
          <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OnPlay">Play</Button>
        </RelativePanel>
        <Panel DockPanel.Dock="Top" HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" ToolTip.Tip="rightclick for more options">
          <Panel.ContextMenu>
            <ContextMenu>
              <MenuItem Click="OnAddSong">AddaSong</MenuItem>
            </ContextMenu>
          </Panel.ContextMenu>
        </Panel>
      </DockPanel>
    <!--- This is the replacement for AeroDesktopFeatures -->
    </DockPanel>
    <Border Name="TopLeft" Background="Transparent"/>
    <Border Name="TopRight" Background="Transparent" Grid.Column="2" />
    <Border Name="BottomLeft" Background="Transparent" Grid.Row="2" />
    <Border Name="BottomRight" Background="Transparent"  Grid.Row="2" Grid.Column="2"/>
    <Border Name="Top" Background="Transparent" Grid.Column="1" />
    <Border Name="Right" Background="Transparent" Grid.Row="1"  Grid.Column="2" />
    <Border Name="Bottom" Background="Transparent" Grid.Row="2" Grid.Column="1"  />
    <Border Name="Left" Background="Transparent"  Grid.Row="1" />
  </Grid>
  </Panel>

  <!--
  <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
    <RelativePanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
      <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OnPlay">Play</Button>
    </RelativePanel>
    <Panel DockPanel.Dock="Top" Background="Gray" HorizontalAlignment="Stretch" 
  >         VerticalAlignment="Stretch" ToolTip.Tip="rightclick for more options">
      <Panel.ContextMenu> 
        <ContextMenu>
          <MenuItem Click="OnAddSong">Add a Song</MenuItem>
        </ContextMenu>
      </Panel.ContextMenu>
    </Panel>
  </DockPanel>
  -->
</Window>
