<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
             x:Class="AvaloniaTesty.Settings"
             Name="Settings">

  <Panel Name="SettingsPanel">
    <StackPanel Spacing="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
      <ComboBox SelectedIndex="{Binding ThemeSelection}" 
                HorizontalContentAlignment="Stretch">
        <ComboBoxItem Content="Dark Theme"/>
        <ComboBoxItem Content="Light Theme"/>
      </ComboBox>
      <ComboBox SelectedIndex="{Binding DeviceSelection}" 
                Items="{Binding Devices}" 
                HorizontalContentAlignment="Stretch">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Name}"/>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <TextBox Watermark="Path to Media..." 
               Text="{Binding MediaPath}"
               HorizontalContentAlignment="Stretch"/>
      <Button Content="Save" HorizontalAlignment="Center" Command="{Binding SaveSettings}"></Button>
    </StackPanel>
  </Panel>
  
</UserControl>